    public static void agregarunPersonaje() {
       Scanner scanner=new Scanner(System.in);
       System.out.println("agrega un personaje");
       
        System.out.println("escribe el nombre del personaje");
        String nombre = scanner.nextLine();
        for (int iterador = 0; iterador < ContadordePersonajes ; ++iterador){ 
            if (nombresPersonajes[iterador].equalsIgnoreCase(nombre)) { 
                System.out.println("el nombre del personaje ya existe");
                return; }
            
      }  
    }
          

